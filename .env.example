# Environment Variables Example for Belgian Document Deidentification System
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
BELGIAN_DEIDENT_API__HOST=0.0.0.0
BELGIAN_DEIDENT_API__PORT=8000
BELGIAN_DEIDENT_API__WORKERS=4
BELGIAN_DEIDENT_API__RELOAD=false
BELGIAN_DEIDENT_API__LOG_LEVEL=info

# =============================================================================
# Application Settings
# =============================================================================
BELGIAN_DEIDENT_DEBUG=false
BELGIAN_DEIDENT_LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# Local development
BELGIAN_DEIDENT_DATABASE__URL=postgresql://postgres:password@localhost:5432/belgian_deidentification

# Render (automatically set)
# BELGIAN_DEIDENT_DATABASE__URL=$DATABASE_URL

BELGIAN_DEIDENT_DATABASE__POOL_SIZE=10
BELGIAN_DEIDENT_DATABASE__MAX_OVERFLOW=20
BELGIAN_DEIDENT_DATABASE__ECHO=false

# =============================================================================
# File Paths
# =============================================================================
# Local development
BELGIAN_DEIDENT_DATA_DIR=./data
BELGIAN_DEIDENT_MODELS_DIR=./data/models
BELGIAN_DEIDENT_TEMP_DIR=/tmp/belgian_deidentification

# Render deployment
# BELGIAN_DEIDENT_DATA_DIR=/opt/render/project/src/data
# BELGIAN_DEIDENT_MODELS_DIR=/opt/render/project/src/data/models
# BELGIAN_DEIDENT_TEMP_DIR=/tmp/belgian_deidentification

# =============================================================================
# NLP Configuration
# =============================================================================
BELGIAN_DEIDENT_NLP__MODEL=DTAI-KULeuven/robbert-2023-dutch-large
BELGIAN_DEIDENT_NLP__USE_GPU=true
BELGIAN_DEIDENT_NLP__BATCH_SIZE=32
BELGIAN_DEIDENT_NLP__MAX_LENGTH=512
BELGIAN_DEIDENT_NLP__CONFIDENCE_THRESHOLD=0.85

# For Render (resource-constrained)
# BELGIAN_DEIDENT_NLP__MODEL=DTAI-KULeuven/robbert-2023-dutch-base
# BELGIAN_DEIDENT_NLP__USE_GPU=false
# BELGIAN_DEIDENT_NLP__BATCH_SIZE=8
# BELGIAN_DEIDENT_NLP__MAX_LENGTH=256
# BELGIAN_DEIDENT_NLP__CONFIDENCE_THRESHOLD=0.80

# =============================================================================
# Deidentification Settings
# =============================================================================
BELGIAN_DEIDENT_DEIDENTIFICATION__MODE=anonymization
BELGIAN_DEIDENT_DEIDENTIFICATION__ENTITIES=["PERSON","ADDRESS","DATE","MEDICAL_ID","PHONE","EMAIL"]
BELGIAN_DEIDENT_DEIDENTIFICATION__PRESERVE_STRUCTURE=true
BELGIAN_DEIDENT_DEIDENTIFICATION__DATE_SHIFT_DAYS=null
BELGIAN_DEIDENT_DEIDENTIFICATION__REPLACEMENT_STRATEGY=realistic

# =============================================================================
# Security Configuration
# =============================================================================
BELGIAN_DEIDENT_SECURITY__ENCRYPTION_ENABLED=true
BELGIAN_DEIDENT_SECURITY__AUDIT_LOGGING=true
BELGIAN_DEIDENT_SECURITY__ACCESS_CONTROL=true
BELGIAN_DEIDENT_SECURITY__DATA_RETENTION_DAYS=90

# =============================================================================
# Quality Assurance
# =============================================================================
BELGIAN_DEIDENT_QUALITY_ASSURANCE__ENABLE_VALIDATION=true
BELGIAN_DEIDENT_QUALITY_ASSURANCE__CONFIDENCE_THRESHOLD=0.85
BELGIAN_DEIDENT_QUALITY_ASSURANCE__EXPERT_REVIEW_SAMPLING=0.1
BELGIAN_DEIDENT_QUALITY_ASSURANCE__STATISTICAL_MONITORING=true

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
# Local development
BELGIAN_DEIDENT_REDIS_URL=redis://localhost:6379/0

# Render (automatically set if using Redis service)
# BELGIAN_DEIDENT_REDIS_URL=$REDIS_URL

# =============================================================================
# External API Keys (Optional)
# =============================================================================
# OpenAI API (if using GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Hugging Face API (for model downloads)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# =============================================================================
# Monitoring and Logging (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# Development Settings
# =============================================================================
# Enable development features
DEVELOPMENT_MODE=false

# Mock external services for testing
MOCK_EXTERNAL_SERVICES=false

# Enable detailed logging
VERBOSE_LOGGING=false

# =============================================================================
# Performance Settings
# =============================================================================
# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# Model cache size
MODEL_CACHE_SIZE=100

# Enable caching
ENABLE_CACHING=true

# =============================================================================
# Render-Specific Settings
# =============================================================================
# Port (automatically set by Render)
# PORT=10000

# Render internal URLs
# RENDER_EXTERNAL_URL=https://your-service.onrender.com
# RENDER_INTERNAL_URL=http://your-service:10000

# =============================================================================
# Docker Settings (for local development)
# =============================================================================
# Docker Compose environment
COMPOSE_PROJECT_NAME=belgian_deidentification
POSTGRES_DB=belgian_deidentification
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
REDIS_PASSWORD=redis_password

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/test_belgian_deidentification

# Test data directory
TEST_DATA_DIR=./tests/data

# Enable test mode
TESTING=false

